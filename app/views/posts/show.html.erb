<section class="listing">
	<div class="container">
		<div class="header">
			<p id="notice"><%= notice %></p>
			<h4><%= @post.heading.html_safe %></h4>
			<p><%= link_to @post.external_url, @post.external_url %></p>
		</div>
		<div class="row">
			<div class="col-md-7">
				<% @images.each do |image| %>
				  <%= image_tag image.url, class: "thumbnail" %>
				<% end %>
			</div>
			<div class="col-md-5">
				<div class="basic_info">
					<h5>Basic Information</h5>
					<p><%= number_to_currency(@post.price) %></p>

					<p><%= "Last updated on #{Time.at(@post.timestamp.to_i).strftime("%m/%d/%y")}" %></p>

					<p>
					  <%= "Bedrooms: #{@post.bedrooms}" %><br>
					  <%= "Bathrooms: #{@post.bathrooms}" %><br>
					  <%= "Cats allowed: #{@post.cats}" %><br>
					  <%= "Dogs allowed: #{@post.dogs}" %><br>
					  <%= "Square footage: #{@post.sqft}" %><br>
					  <%= "Washer/dryer in unit: #{@post.w_d_in_unit}" %><br>
					  <%= "Street parking available: #{@post.street_parking}" %><br>
					</p>
				</div>
				<div class="description">
					<h5>Description</h5>
          <p><%= raw(@post.body) %></p>
					<p><%#= @post.body.gsub(/\n/, '<br/>').html_safe %></p>
				</div>
				<%= link_to 'Back', posts_path, class: "btn btn-primary pull-right" %>
			</div>
		</div>
			
	</div>
</section>
