<section class="listing">
  <div class="container">
    <div class="header">
      <p id="notice"><%= notice %></p>
      <h4><%= @post.heading.html_safe %></h4>
      <p><%= link_to @post.external_url, @post.external_url %></p>
    </div>
    <div class="row">
      <div class="col-md-7">
        <% if @images.blank? %>
          <%= image_tag "http://www.eastbaymodern.com/idx/img/no-image.gif", class: "thumbnail" %>
        <% else %>
          <% @images.each do |image| %>
            <%= image_tag image.url, class: "thumbnail" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-5">
        <div class="basic_info">
          <h5>Basic Information</h5>
          <p><%= number_to_currency(@post.price, precision: 0) %></p>

          <p><%= "Last updated on #{Time.at(@post.timestamp.to_i).strftime("%m/%d/%y")}" %></p>
          
          <% if @post.neighborhood.present? %>
            <%= "Neighborhood: #{@post.neighborhood}" %><br>
          <% end %>

          <% if @post.bedrooms.present? %>
            <%= "Bedrooms: #{@post.bedrooms}" %><br>
          <% end %>
          
          <% if @post.bathrooms.present? %>
            <%= "Bathrooms: #{@post.bathrooms}" %><br>
          <% end %>
          
          <% if @post.cats.present? %>
            <%= "Cats allowed: #{@post.cats}" %><br>
          <% end %>
          
          <% if @post.dogs.present? %>
            <%= "Dogs allowed: #{@post.dogs}" %><br>
          <% end %>
          
          <% if @post.sqft.present? %>
            <%= "Square footage: #{@post.sqft}" %><br>
          <% end %>
          
          <% if @post.w_d_in_unit.present? %>
            <%= "Washer/dryer in unit: #{@post.w_d_in_unit} <br>" %><br>
          <% end %>
          
          <% if @post.street_parking.present? %>
            <%= "Street parking available: #{@post.street_parking}" %><br>
          <% end %>
          
        </div>
        
        <div class="description">
          <h5>Description</h5>
          <p><%= raw(@post.body) %></p>
          <p><%#= @post.body.gsub(/\n/, '<br/>').html_safe %></p>
        </div>
        
        <%= image_tag "https://maps.google.com/?q=loc%3A+bedford+ave+at+shore+pkwy+brooklyn+NY+US" %>
        
        <%= link_to 'Back', posts_path, class: "btn btn-primary pull-right" %>
        
      </div>
    </div>
      
  </div>
</section>